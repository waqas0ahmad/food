@model Food.Models.User

@{
    Layout = null;
}
<style>
    .block-bg-login {
        position: absolute;
        filter: blur(10px);
        top: 0;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100vh;
    }
</style>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
<img class="block-bg-login" src="~/Content/images/photo-1490818387583-1baba5e638af.jpg" />
<script src="~/Content/bootstrap-select/bootstrap-select.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 m-auto" style="height:100vh;display:table">
            <div class="bs-component" style="display: table-cell;vertical-align: middle;">
                <div class="list-group" style="box-shadow: 0 0 8px black;">
                    <div class="list-group-item list-group-item-action flex-column align-items-start active">
                        <h3 class="text-center" style="color:#FFF"> Create Account </h3>
                    </div>
                    <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <form method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <label>Display name</label>
                                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "" })
                                    <input type="password" value="" id="" class="form-control" name="Password" />
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Type</label>
                                    <select class="form-control" name="UserType">
                                        @foreach (var item in Enum.GetValues(typeof(Food.Models.UserTypes)))
                                        {
                                            if (item.ToString() != "Admin")
                                            {
                                                <option value="@((int)Enum.Parse(typeof(Food.Models.UserTypes), item+""))" >@item.ToString()</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <input type="submit" value="Register" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                        </form>
                        <div class="form-group">
                            <hr />
                        </div>
                        <div class="form-group text-center">
                            <a href="/account/login" class="btn btn-link">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
